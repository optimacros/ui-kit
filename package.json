{
    "name": "@optimacros/ui-kit-root",
    "private": false,
    "version": "0.0.0",
    "scripts": {
        "prepare": "husky",
        "start": "storybook dev --no-open",
        "dev": "lerna run dev --scope=@optimacros/ui-kit",
        "dev:core": "lerna run dev --scope=@optimacros/ui-kit-core",
        "dev:example": "lerna run dev --scope=@optimacros/example",
        "build": "lerna run build --scope=@optimacros/ui-kit",
        "lint": "biome check src",
        "lint:fix": "biome check src --write",
        "preview": "vite preview",
        "prepack": "json -f package.json -I -e \"delete this.devDependencies; delete this.dependencies\"",
        "build:storybook": "storybook build",
        "bootstrap": "lerna clean && lerna bootstrap",
        "clean": "lerna clean",
        "postinstall": "lerna bootstrap"
    },
    "devDependencies": {
        "lerna": "^6.6.1",
        "@biomejs/biome": "1.9.4",
        "@storybook/addon-actions": "8.0.9",
        "@storybook/addon-essentials": "8.0.9",
        "@storybook/addon-interactions": "8.0.9",
        "@storybook/addon-links": "8.0.9",
        "@storybook/react": "8.0.9",
        "@storybook/react-vite": "8.0.9",
        "@types/react": "18.2.75",
        "@types/react-beautiful-dnd": "6.0.1",
        "@types/react-color": "3.0.12",
        "@types/react-dnd": "3.0.2",
        "@types/react-dom": "18.2.24",
        "@types/react-input-mask": "^3.0.5",
        "@types/react-modal": "3.16.3",
        "@types/react-resizable": "3.0.8",
        "@types/react-transition-group": "4.4.11",
        "@types/tinycolor2": "1.4.6",
        "@vitejs/plugin-react-swc": "3.6.0",
        "husky": "^9.1.6",
        "postcss": "8.4.20",
        "postcss-apply": "0.12.0",
        "postcss-calc": "8.2.4",
        "postcss-color-function": "4.1.0",
        "postcss-comment": "2.0.0",
        "postcss-custom-properties": "10.0.0",
        "postcss-import": "15.1.0",
        "postcss-loader": "7.0.2",
        "postcss-nested": "4.2.3",
        "postcss-normalize": "10.0.1",
        "postcss-preset-env": "7.8.3",
        "storybook": "^8.0.9",
        "typescript": "5.4.5",
        "vite": "5.2.8",
        "vite-plugin-dts": "3.8.1",
        "vite-plugin-lib-inject-css": "2.0.1",
        "vite-tsconfig-paths": "4.3.2",
        "lint-staged": "15.2.10",
        "@commitlint/cli": "17.1.2",
        "@commitlint/config-conventional": "9.1.2"
    },
    "lint-staged": {
        "*.{js,ts,tsx}": ["biome check --write"]
    },
    "commitlint": {
        "extends": ["@commitlint/config-conventional"]
    }
}
