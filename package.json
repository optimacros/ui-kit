{
    "name": "@optimacros-ui/root",
    "private": false,
    "version": "0.0.0",
    "scripts": {
        "prepare": "husky",
        "start": "npm run start:storybook",
        "start:storybook": "storybook dev --no-open -p 6006",
        "start:example": "lerna run start --scope=@optimacros-ui/example",
        "start:wsfe": "lerna run build:wsfe --scope=@optimacros-ui/kit-internal",
        "start:example-webpack": "lerna run start:webpack --scope=@optimacros-ui/example",
        "start:figma": "lerna run start --scope=@optimacros-ui/figma",
        "build:wsfe": "lerna run build --scope=@optimacros-ui/*",
        "build": "lerna run build --scope=@optimacros-ui/*",
        "build:components": "lerna run build --scope @optimacros-ui/* --ignore=@optimacros-ui/{kit,store,utils,figma,kit-internal,kit-legacy,types,themes,example}",
        "build:core": "npm run build:components && npm run build:kit-store && lerna run build --scope=@optimacros-ui/kit",
        "build:legacy": "lerna run build --scope=@optimacros-ui/kit-legacy",
        "build:internal": "lerna run build --scope=@optimacros-ui/kit-internal",
        "build:example": "lerna run build --scope=@optimacros-ui/example",
        "build:themes": "lerna run build --scope=@optimacros-ui/themes",
        "build:store": "lerna run build --scope=@optimacros-ui/store",
        "build:kit-store": "lerna run build --scope=@optimacros-ui/kit-store",
        "build:utils": "lerna run build --scope=@optimacros-ui/utils",
        "build:figma": "lerna run build --scope=@optimacros-ui/figma",
        "build:types": "lerna run build --scope=@optimacros-ui/types",
        "build:ui": "npm run build:core && lerna run build --scope=@optimacros-ui/{store,utils,figma,kit-internal,kit-legacy,types,themes,example}",
        "lint": "biome check packages --log-level=error --diagnostic-level=error",
        "lint:fix": "biome check packages --write --log-level=error --diagnostic-level=error --config-path=biome-commit.json",
        "test-storybook": "test-storybook",
        "test-storybook:update": "test-storybook --updateSnapshot",
        "build:storybook": "storybook build",
        "start:prod": "http-server ./storybook-static",
        "bootstrap": "lerna clean && lerna bootstrap",
        "clean": "lerna clean",
        "postinstall": "node ./scripts/postinstall.js",
        "publish": "npm run build:ui && lerna publish from-package",
        "unpublish": "npm unpublish @optimacros-ui/kit",
        "create:mr": "npm run type:check && node ./scripts/create-mr.js",
        "rebase": "node ./scripts/rebase.js --main=main",
        "rebase:continue": "npm run rebase -- --continue",
        "rebase:create-mr": "npm run rebase -- --continue --mr",
        "reinstall": "node ./scripts/reinstall.js",
        "create:release": "sh ./scripts/release.sh",
        "type:check": "tsc --pretty --noEmit",
        "type:coverage": "typescript-coverage-report -o .coverage/ts",
        "test:coverage": "npm run test-storybook -- --coverage --coverageDirectory .coverage/storybook",
        "coverage": "rm -rf .coverage && mkdir .coverage && npm run type:coverage && npm run test:coverage"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@commitlint/cli": "17.1.2",
        "@commitlint/config-conventional": "9.1.2",
        "@storybook/addon-actions": "8.5.2",
        "@storybook/addon-coverage": "^1.0.5",
        "@storybook/addon-designs": "8.0.4",
        "@storybook/addon-docs": "8.5.2",
        "@storybook/addon-essentials": "8.5.2",
        "@storybook/addon-interactions": "8.5.2",
        "@storybook/addon-links": "8.5.2",
        "@storybook/addon-storysource": "8.5.2",
        "@storybook/blocks": "8.5.2",
        "@storybook/react": "8.5.2",
        "@storybook/react-vite": "8.5.2",
        "@storybook/test": "8.5.2",
        "@storybook/test-runner": "^0.21.0",
        "@types/jest-image-snapshot": "^6.4.0",
        "@types/lodash-es": "4.17.12",
        "@types/react": "18.2.75",
        "@types/react-beautiful-dnd": "6.0.1",
        "@types/react-color": "3.0.12",
        "@types/react-dnd": "3.0.2",
        "@types/react-dom": "18.2.24",
        "@types/react-input-mask": "3.0.5",
        "@types/react-modal": "3.16.3",
        "@types/react-transition-group": "4.4.11",
        "@types/tinycolor2": "1.4.6",
        "@vitejs/plugin-react-swc": "3.8.1",
        "concurrently": "9.1.0",
        "esbuild-visualizer": "^0.7.0",
        "http-server": "14.1.1",
        "husky": "^9.1.6",
        "jest-image-snapshot": "^6.4.0",
        "lerna": "^6.6.1",
        "lint-staged": "15.2.10",
        "postcss": "8.4.20",
        "postcss-apply": "0.12.0",
        "postcss-calc": "8.2.4",
        "postcss-color-function": "4.1.0",
        "postcss-comment": "2.0.0",
        "postcss-custom-properties": "10.0.0",
        "postcss-import": "15.1.0",
        "postcss-loader": "7.0.2",
        "postcss-nested": "4.2.3",
        "postcss-normalize": "10.0.1",
        "postcss-preset-env": "7.8.3",
        "postcss-rem-to-rem-multiplier": "^4.2.0",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "semantic-ui-react": "^2.1.5",
        "storybook": "8.5.2",
        "storybook-addon-performance": "^0.17.3",
        "storybook-addon-pseudo-states": "^4.0.2",
        "tsup": "8.4.0",
        "typescript": "5.4.5",
        "typescript-coverage-report": "^1.0.0",
        "vite": "6.1.1",
        "vite-plugin-dts": "3.8.1",
        "vite-plugin-lib-inject-css": "2.0.1",
        "vite-tsconfig-paths": "4.3.2"
    },
    "lint-staged": {
        "*.{ts,tsx,js,ts,tsx,css,json}": [
            "biome check --write --log-level=error --diagnostic-level=error --no-errors-on-unmatched --config-path=biome-commit.json"
        ]
    },
    "commitlint": {
        "extends": ["@commitlint/config-conventional"]
    }
}
